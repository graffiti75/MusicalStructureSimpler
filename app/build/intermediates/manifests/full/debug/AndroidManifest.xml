<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.android.cericatto.musicalstructure"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="br.android.cericatto.musicalstructure.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.android.cericatto.musicalstructure.SearchActivity"
            android:label="@string/activity_search" />
        <activity
            android:name="br.android.cericatto.musicalstructure.NowPlayingActivity"
            android:label="@string/activity_now_playing" />
        <activity
            android:name="br.android.cericatto.musicalstructure.FavoritesActivity"
            android:label="@string/activity_favorites" />
        <activity
            android:name="br.android.cericatto.musicalstructure.DetailsActivity"
            android:label="@string/activity_details" />
        <activity
            android:name="br.android.cericatto.musicalstructure.StoreActivity"
            android:label="@string/activity_store" />
    </application>

</manifest>